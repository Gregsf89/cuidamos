                    "description": "The request body receives email and password",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "maxLength": 100,
                                        "example": "email@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "maxLength": 100,
                                        "example": "YouAmazingPasswordWithMinimunLenght8SpecialCharacterCapitalLetter"
